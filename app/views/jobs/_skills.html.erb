<a data-role="button" id="add_element">Add Another Skill</a>
<script type="text/javascript">
//Adds a new skill element on click
$('#add_element').click(function () {
    var list = $('ul[data-role="listview"]');
    var nextLi = ((list.children().length));
    var li = "<li><input type='text' id='job_skills_attributes_" + nextLi + "_title' name='skills_attributes[" + nextLi + "][title]'>";
    var slider = "<input type='range' id='job_skills_attributes_" + nextLi + "_intensity' name='jobskills_attributes[" + nextLi + "][intensity]' max='10' min='0' value='5' data-highlight='true'></li>";
    var insert = li + slider
    list.append(insert);
    list.listview('refresh');
    $('#listview').trigger('create');

});
</script>

